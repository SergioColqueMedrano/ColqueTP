generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Size {

  M
  L
  XL

}

enum Category {
  men
  women
}

model Building {
  id String @id @default(uuid())
  name String @unique

  Unit Unit[]
}

model Unit {
  id String @id @default(uuid())
  title String
  description String 
  inStock Int
  price Float @default(0)
  sizes Size[] @default([])
  slug  String @unique
  tags String[] @default([])
  Category Category

  Building Building @relation(fields: [BuildingId], references: [id])
  BuildingId String

  UnitImage UnitImage[]

  @@index([Category])
}

model UnitImage {
  id Int @id @default(autoincrement())
  url String

  Unit Unit @relation(fields: [UnitId], references: [id])
  UnitId String
}
